# ========================================
# 站点基础配置
# ========================================

# 站点唯一标识符（必需）
NEXT_PUBLIC_SITE_ID=my-saas-platform

# 站点名称和标题
NEXT_PUBLIC_SITE_NAME=My SaaS Platform
NEXT_PUBLIC_SITE_TITLE=My SaaS Platform - 专业的SaaS解决方案
NEXT_PUBLIC_SITE_DESCRIPTION=一个现代化的SaaS平台，帮助企业快速构建订阅业务

# 域名和URL配置
NEXT_PUBLIC_DOMAIN=my-saas-platform.com
NEXT_PUBLIC_BASE_URL=https://my-saas-platform.com

# ========================================
# 品牌和UI配置
# ========================================

# Logo和图标
NEXT_PUBLIC_LOGO_URL=/logo.svg
NEXT_PUBLIC_FAVICON_URL=/favicon.ico
NEXT_PUBLIC_PRIMARY_COLOR=#3B82F6

# ========================================
# Paddle支付配置
# ========================================

# Paddle环境 (sandbox 或 live)
NEXT_PUBLIC_PADDLE_ENVIRONMENT=sandbox

# Paddle API密钥（从Paddle Dashboard获取）
PADDLE_API_KEY=your_paddle_api_key_here
PADDLE_WEBHOOK_SECRET=your_paddle_webhook_secret_here

# ========================================
# 功能开关
# ========================================

# 启用/禁用各种功能
NEXT_PUBLIC_ENABLE_BLOG=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_SUPPORT=true
NEXT_PUBLIC_ENABLE_PRICING=true

# ========================================
# 内容配置
# ========================================

# 首页内容
NEXT_PUBLIC_HERO_TITLE=构建您的SaaS业务
NEXT_PUBLIC_HERO_SUBTITLE=使用我们的平台快速启动您的订阅业务
NEXT_PUBLIC_PRICING_TITLE=简单透明的定价
NEXT_PUBLIC_CONTACT_EMAIL=support@my-saas-platform.com

# ========================================
# Supabase配置
# ========================================

# Supabase项目配置
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ========================================
# Next.js配置
# ========================================

# Next.js基础配置
NEXTAUTH_SECRET=your_nextauth_secret
NEXTAUTH_URL=http://localhost:3000

